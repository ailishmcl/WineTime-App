<h1>Add Wine</h1>

<form method="POST" action="/wine/add">
    <div>
        <label>Name:</label>
        <input type="text" name="name" />
    </div>

    <div>
        <label>Grape:</label>
        <input type="text" name="grape" />
    </div>

    <div>
        <label>Region:</label>
        <input type="text" name="region" />
    </div>

    <div>
        <label>Country:</label>
        <input type="text" name="country" />
    </div>

    <br>

    <button type="submit">Add Wine</button>
</form>