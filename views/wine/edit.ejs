<h1>Edit Wine</h1>

<form method="POST" action="/wine/update?_method=PUT">
    <div>
        <label>Name:</label>
        <input type="text" name="name" value="<%= wine.name %>">
    </div>
    <div>
        <label>Grape:</label>
        <input type="text" name="grape" value="<%= wine.grape %>">
    </div>
    <div>
        <label>Region:</label>
        <input type="text" name="region" value="<%= wine.region %>">
    </div>
    <div>
        <label>Country:</label>
        <input type="text" name="country" value="<%= wine.country %>">
    </div>

    <input type="hidden" name="id" value="<%= wine._id %>">
    <button type="submit">Update Wine</button>
</form>