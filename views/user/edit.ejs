<h1> Edit Profile </h1>

<form method="POST" action="../auth/update?_method=PUT">
    <div>
        <label>First Name:</label>
        <input type="text" name="firstName" value="<%= currentUser.firstName %>">
    </div>
    <div>
        <label>Last Name:</label>
        <input type="text" name="lastName" value="<%= currentUser.lastName %>">
    </div>
    <div>
        <label>Email Address:</label>
        <input type="text" name="emailAddress" value="<%= currentUser.emailAddress %>">
    </div>
    <div>
        <label>Username:</label>
        <input type="text" name="username" value="<%= currentUser.username %>">
    </div>

    <input type="hidden" name="id" value="<%= currentUser._id %>">
    <button type="submit">Update Profile</button>
</form>